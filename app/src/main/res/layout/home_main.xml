            android:text="Doctor Zion"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/doctorimagezion"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="172.81921dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="56.92dp"
            android:fontFamily="@font/open_sans"
            android:text="Jorem ipsum dolor, consectetur adipiscing elit. Nunc v libero et velit interdum, ac  mattis."
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/doctorimagezion"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btndocpagad"
            android:layout_width="79dp"
            android:layout_height="28.38dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="131.37dp"
            android:background="@drawable/doctor_pagad_button"
            android:fontFamily="@font/open_sans"
            android:text="Book"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/doctorimagezion"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/star"
            android:layout_marginTop="131.37dp"
            android:layout_marginStart="290dp"
            app:layout_constraintStart_toEndOf="@id/btndocpagad"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="5.0"
            android:layout_marginTop="131.37dp"
            android:layout_marginStart="323dp"
            app:layout_constraintStart_toEndOf="@id/btndocpagad"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="23.75dp"
            android:layout_marginStart="321.5dp"
            android:background="@drawable/heart"/>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
